<div class="page" id="login-page">
  <h1>Log In!</h1>
  <form class="login-form">
    <div class="form-group">
    <label for="username">Username</label>
    <input type="text" class="form-control" id="username" placeholder="username">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" placeholder="password">
  </div>
  <button href="/" type="submit" class="btn btn-default" id="login-submit">Submit</button>
  </form>
  <p class="sign-up">Don't have an account? <a class="nav-link" id="signup-btn" href="javascript://">Create </a>one now!</p>
</div>

<div class="page" id="signup-page">
  <h1>Sign Up!</h1>
  <form class="login-form">
    <div class="form-group">
    <label for="username">Username</label>
    <input type="text" class="form-control" id="username-signup" placeholder="username">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password-signup" placeholder="password">
  </div>
  <button href="/" type="submit" class="btn btn-default" id="signup-submit">Submit</button>
  </form>
  <p class="sign-up">Already have an account? <a class="nav-link" id="login-btn" href="javascript://">Log in</a></p>
</div>

